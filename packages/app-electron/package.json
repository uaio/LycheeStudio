{
  "name": "@ai-tools/app-electron",
  "version": "2.0.0",
  "description": "AI Tools Manager - Electron 桌面应用",
  "main": "dist/main/index.js",
  "private": true,
  "scripts": {
    "dev": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && tsc -p tsconfig.renderer.json && electron .",
    "build": "pnpm build:main && pnpm build:preload && pnpm build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "dist": "pnpm build && electron-builder",
    "clean": "rm -rf dist out"
  },
  "dependencies": {
    "@ai-tools/core": "workspace:*",
    "@ai-tools/adapter-electron": "workspace:*",
    "@ai-tools/ui": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "antd": "^5.29.0",
    "lucide-react": "^0.554.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.lycheestudio.app",
    "productName": "AI Tools Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"],
      "arch": ["x64", "arm64"]
    }
  }
}
